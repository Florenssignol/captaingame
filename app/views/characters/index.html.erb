<p id="notice"><%= notice %></p>

<div class="container">
  <div class="page-header">
    <h1>Characters</h1>
  </div>
</div>

<div class="container">
  <div class="row">
    <% @characters.each do |character| %>
      <div class="col-sm-4">
        <div class="card">
          <% if character.avatar.attached? %>
            <%= image_tag character.avatar, class: "card-img-top" %>
          <% else %>
            There is no avatar for this character
          <% end %>
          <div class="card-body">
            <h5 class="card-title">(#<%= character.id %>) <%= character.name %></h5>
            <p class="card-text"><%= character.description %></p>
          </div>
          <ul class="list-group list-group-flush">
            <li class="list-group-item"><%= character.life %></li>
            <li class="list-group-item"><%= character.attack %></li>
            <li class="list-group-item"><%= character.victory_percentage %></li>
          </ul>
          <div class="card-body">
            <%= link_to 'Show', character, class: "card-link" %>
            <%= link_to 'Edit', edit_character_path(character), class: "card-link" %>
            <%= link_to 'Destroy', character, method: :delete, data: { confirm: 'Are you sure?' }, class: "card-link" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>


